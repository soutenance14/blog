
      
       
            
           
           <div class="container px-4 px-lg-5">
                 {% for commentEntity in listCommentsPublishedEntity %}
                    {# <li>{{ user.username|e }}</li> #}
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <!-- Post preview-->
                        <div class="post-preview">
                            <a href="post/{{commentEntity.getId()}}">
                                <h2 class="post-title">{{commentEntity.getLogin()}}</h2>
                                <h3 class="post-subtitle">{{commentEntity.getContenu()}}</h3>
                            </a>
                            <p class="post-meta">
                                Posté par
                                <a href="#!">{{commentEntity.getAuteur()}}</a>
                                {{commentEntity.setformattedCreatedAt()}}
                                le {{commentEntity.getDate()}} à {{commentEntity.getTime()}}
                            </p>
                        </div>
                        <!-- Divider-->
                        <hr class="my-4" />
                        <!-- Pager-->
                    </div>
                </div>
                {% endfor %}
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>                
            </div>
           
           